{
  "name": "cursor-rules-monorepo",
  "private": true,
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm --filter @necolo/cursor-rules dev",
    "sync-rules": "tsx scripts/sync-rules.ts",
    "test": "pnpm --filter @necolo/cursor-rules test",
    "test:run": "pnpm --filter @necolo/cursor-rules test:run",
    "test:coverage": "pnpm --filter @necolo/cursor-rules test:coverage",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm version-packages && pnpm build && changeset publish",
    "publish": "pnpm release",
    "release:prepare": "pnpm changeset && pnpm version-packages && git add . && git commit -m \"Release: Version packages\"",
    "release:full": "pnpm release:prepare && pnpm build && changeset publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.27.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  }
}